# ===========================================
#      CAPTION
# ===========================================
caption always "%{= kw}%-w%{= BW}%n %t%{-}%+w "

# disable the the copyright splash screen
startup_message off
#
# define some usefull options
defscrollback 100000
#
deflog on
# tell screen to log to /var/log/serial.$WINDOW
logfile /tmp/serial.%n

