# ===========================================
#      CAPTION
# ===========================================
caption always "%{= kw}%-w%{= BW}%n %t%{-}%+w "

# ===========================================
#       HARDSTATUS
# ===========================================
# hardstatus alwayslastline "%{+b kr}host: %{kw}%H%{kg} %c - %D %d.%m.%Y %{kr}(load: %l) %-26=%1`"
